<%- messages() %>

<h1><%= title %></h1>

<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<div class="edit-inventory-container">
  <form id="updateForm" action="/inv/update" method="post">
    <div class="form-group">
      <label for="classification_id">Classification:</label>
      <%- classificationSelect %>
    </div>
    <div class="form-group">
      <label for="inv_make">Make:</label>
      <input
        type="text"
        id="inv_make"
        name="inv_make"
        required
        value="<%= locals.inv_make ? inv_make : '' %>"
      />
    </div>
    <div class="form-group">
      <label for="inv_model">Model:</label>
      <input
        type="text"
        id="inv_model"
        name="inv_model"
        required
        value="<%= locals.inv_model ? inv_model : '' %>"
      />
    </div>
    <div class="form-group">
      <label for="inv_year">Year:</label>
      <input
        type="text"
        id="inv_year"
        name="inv_year"
        required
        pattern="^\d{4}$"
        value="<%= locals.inv_year ? inv_year : '' %>"
      />
    </div>
    <div class="form-group">
      <label for="inv_description">Description:</label>
      <textarea id="inv_description" name="inv_description" required>
<%= locals.inv_description ? inv_description : '' %></textarea
      >
    </div>
    <div class="form-group">
      <label for="inv_price">Price:</label>
      <input
        type="text"
        id="inv_price"
        name="inv_price"
        required
        pattern="^\d+(\.\d{2})?$"
        value="<%= locals.inv_price ? inv_price : '' %>"
      />
    </div>
    <div class="form-group">
      <label for="inv_miles">Miles:</label>
      <input
        type="text"
        id="inv_miles"
        name="inv_miles"
        required
        pattern="^\d+$"
        value="<%= locals.inv_miles ? inv_miles : '' %>"
      />
    </div>
    <div class="form-group">
      <label for="inv_color">Color:</label>
      <input
        type="text"
        id="inv_color"
        name="inv_color"
        required
        value="<%= locals.inv_color ? inv_color : '' %>"
      />
    </div>
    <div class="form-group">
      <button id="updateVehicleButton" type="submit" disabled>Update Vehicle</button>
    </div>
    <input
      type="hidden"
      name="inv_id"
      value="<%= locals.inv_id ? inv_id : '' %>"
    />
    <input
      type="hidden"
      name="inv_image"
      value="<%= locals.inv_image ? inv_image : '/images/vehicles/no-image.png' %>"
    />
    <input
      type="hidden"
      name="inv_thumbnail"
      value="<%= locals.inv_thumbnail ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>"
    />
  </form>
</div>

<script src="../../js/inv-update.js"></script>
